{
    "extends": {
        "category": {
            "tables": {
                "category_ref": {
                    "fields": {
                        "^blog_id": {
                            "type": "int",
                            "key": true
                        }
                    },
                    "keys": {
                        "ref_id": {
                            "type": "unique",
                            "fields": [
                                "$category_id",
                                "^blog_id"
                            ]
                        }
                    },
                    "relationships": {
                        "belongsTo": [
                            "^blog"
                        ]
                    }
                }
            }
        },
        "comment": {
            "tables": {
                "comment": {
                    "fields": {
                        "^blog_id": {
                            "type": "int",
                            "key": true
                        }
                    },
                    "relationships": {
                        "belongsTo": [
                            "^blog"
                        ]
                    }
                }
            }
        },
        "media": {
            "tables": {
                "media": {
                    "fields": {
                        "^blog_id": {
                            "type": "int",
                            "key": true
                        }
                    },
                    "relationships": {
                        "belongsTo": [
                            "^blog"
                        ]
                    }
                }
            }
        }
    },
    "tables": {
        "blog": {
            "fields": {
                "id": {
                    "type": "autoIncId"
                },
                "user_id": {
                    "type": "int",
                    "key": true
                },
                "title": {
                    "type": "string"
                },
                "post": {
                    "type": "string:4096"
                },
                "slug": {
                    "type": "string"
                },
                ">media_id": {
                    "type": "int"
                },
                ">comment_cnt": {
                    "type": "int"
                }
            },
            "relationships": {
                "belongsTo": [
                    "user"
                ],
                "hasMany": [
                    "blog_comment",
                    "blog_category",
                    "blog_media"
                ]
            }
        }
    }
}
